<!--        </dependency>-->
        <dependency>
            <groupId>beast2</groupId>
            <artifactId>beast-app</artifactId>
            <version>${beastVersion}</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/BEAST.app-${beastVersion}.jar</systemPath>
        </dependency>
