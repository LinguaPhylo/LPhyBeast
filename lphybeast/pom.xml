        <dependency>
            <groupId>beast2</groupId>
            <artifactId>beast-launcher</artifactId>
            <version>${beastVersion}</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/launcher-${beastVersion}.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>beast2</groupId>
            <artifactId>beast-labs</artifactId>
            <version>2.0.2</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/BEASTlabs.v2.0.2.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>beast2</groupId>
            <artifactId>beast-classic</artifactId>
            <version>1.6.3</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/BEAST_CLASSIC-1.6.3.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>beast2</groupId>
            <artifactId>bdtree</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/bdtree.v0.0.1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>beast2</groupId>
            <artifactId>FastRelaxedClockLogNormal</artifactId>
            <version>1.2.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/FastRelaxedClockLogNormal-1.2.0.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>beast2</groupId>
            <artifactId>feast</artifactId>
            <version>9.8.5</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/feast.v9.8.5.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>beast2</groupId>
            <artifactId>SSM</artifactId>
            <version>1.2.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/SSM.v1.2.0.jar</systemPath>
        </dependency>

       <!--  previous version 23.6.1-jre has 3 vulnerabilities found by IntelliJ  -->
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>33.2.1-jre</version>
        </dependency>
        <dependency>
            <groupId>java1.8</groupId>
            <artifactId>nashorn</artifactId>
            <version>1.8</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/nashorn.jar</systemPath>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.7.1</version>
                <configuration>
                    <descriptors>
                        <descriptor>src/assembly/assembly.xml</descriptor>
                    </descriptors>
                    <outputDirectory>${project.build.directory}</outputDirectory>
                    <appendAssemblyId>false</appendAssemblyId>
                    <finalName>${project.artifactId}-${project.version}</finalName>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>