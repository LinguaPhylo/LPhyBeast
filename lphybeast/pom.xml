        <groupId>io.github.linguaphylo</groupId>
        <artifactId>lphybeast-root</artifactId>
        <version>${revision}</version>
    </parent>

    <artifactId>lphybeast</artifactId>

    <properties>
        <beastVersion>2.7.6</beastVersion>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.github.linguaphylo</groupId>
            <artifactId>lphy-base</artifactId>
            <version>1.6.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>beast2</groupId>
            <artifactId>beast-base</artifactId>
            <version>${beastVersion}</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/BEAST.base-${beastVersion}.jar</systemPath>
        </dependency>
